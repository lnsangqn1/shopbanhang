<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>db.driver</param-name>
        <param-value>com.mysql.jdbc.Driver</param-value>
    </context-param>
    <context-param>
        <param-name>db.url</param-name>
        <param-value>jdbc:mysql://localhost/dbshop</param-value>
    </context-param>
    <context-param>
        <param-name>db.user</param-name>
        <param-value>root</param-value>
    </context-param>
    <context-param>
        <param-name>db.password</param-name>
        <param-value/>
    </context-param>
    <servlet>
        <servlet-name>ProcessRegister</servlet-name>
        <servlet-class>controller.ProcessRegister</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProcessLogin</servlet-name>
        <servlet-class>controller.ProcessLogin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProcessLogout</servlet-name>
        <servlet-class>controller.ProcessLogout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProcessCart</servlet-name>
        <servlet-class>controller.ProcessCart</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProcessCheckOut</servlet-name>
        <servlet-class>controller.ProcessCheckOut</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProcessCheckEmail</servlet-name>
        <servlet-class>controller.ProcessCheckEmail</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProcessSearch</servlet-name>
        <servlet-class>controller.ProcessSearch</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProcessContact</servlet-name>
        <servlet-class>controller.ProcessContact</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProcessLogoutAdmin</servlet-name>
        <servlet-class>controller.ProcessLogoutAdmin</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProcessRegister</servlet-name>
        <url-pattern>/ProcessRegister</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProcessLogin</servlet-name>
        <url-pattern>/ProcessLogin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProcessLogout</servlet-name>
        <url-pattern>/ProcessLogout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProcessCart</servlet-name>
        <url-pattern>/ProcessCart</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProcessCheckOut</servlet-name>
        <url-pattern>/ProcessCheckOut</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProcessCheckEmail</servlet-name>
        <url-pattern>/ProcessCheckEmail</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProcessSearch</servlet-name>
        <url-pattern>/ProcessSearch</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProcessContact</servlet-name>
        <url-pattern>/ProcessContact</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ManagerCategoryServlet</servlet-name>
        <servlet-class>controller.ManagerCategoryServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ManagerProductServlet</servlet-name>
        <servlet-class>controller.ManagerProductServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ManagerCategoryServlet</servlet-name>
        <url-pattern>/admin/ManagerCategoryServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ManagerProductServlet</servlet-name>
        <url-pattern>/admin/ManagerProductServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProcessLogoutAdmin</servlet-name>
        <url-pattern>/admin/ProcessLogoutAdmin</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
